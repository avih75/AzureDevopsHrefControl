{
    "manifestVersion": 1,
    "id": "Href-Link-Control",
    "version": "1.0.160",
    "name": "Shows linked Href of files",
    "scopes": [
        "vso.code_full",
        "vso.work_write"
    ],
    "description": "Add an href linked type to your form",
    "publisher": "AviHadad",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [{
        "id": "Microsoft.VisualStudio.Services",
        "version": "[15.0,)"
    }],
    "tags": [
        "Work Item",
        "Work Item control",
        "Usability",
        "link",
        "image"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "files": [{
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "hrefIndex.html",
            "addressable": true
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "contributions": [{
        "id": "Href_Link",
        "description": "Show links to files with an href",
        "type": "ms.vss-work-web.work-item-form-control",
        "targets": [
            "ms.vss-work-web.work-item-form"
        ],
        "properties": {
            "name": "link href Field",
            "uri": "hrefIndex.html",
            "inputs": [{
                "id": "linkValue",
                "name": "Link to the image",
                "description": "This field get the links uri",
                "type": "WorkItemField",
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }, {
                "id": "requireCall",
                "name": "Source of the Image",
                "description": "This field get the blob type name (for now can work only with WINS)",
                "type": "AreaText",
                "validation": {
                    "dataType": "String",
                    "isRequired": false
                }
            }, {
                "id": "blobUrl",
                "name": "URL to the Blob",
                "description": "This field get the blob URL",
                "type": "AreaText",
                "validation": {
                    "dataType": "String",
                    "isRequired": false
                }
            }, {
                "id": "userPassword",
                "name": "user name and password",
                "description": "This field get the user name and the password seperated by ',' ",
                "type": "AreaText",
                "validation": {
                    "dataType": "String",
                    "isRequired": false
                }
            }]
        }
    }]
}